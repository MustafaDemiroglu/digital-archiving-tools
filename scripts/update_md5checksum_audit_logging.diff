 # Log file initialization
 LOG_FILE="md5_update_paths_output_$(date '+%Y%m%d_%H%M%S').log"

+# =========================
+# Audit-grade logging layer
+# =========================
+log_msg() {
+    local level="$1"; shift
+    local msg="$*"
+    local ts
+
+    ts="$(date '+%Y-%m-%d %H:%M:%S')"
+
+    # Write always to log file
+    printf '[%s] [%s] %s\n' "$ts" "$level" "$msg" >> "$LOG_FILE"
+
+    # And always to terminal
+    printf '[%s] [%s] %s\n' "$ts" "$level" "$msg"
+}
+
+log_info()  { log_msg "INFO"  "$@"; }
+log_warn()  { log_msg "WARN"  "$@"; }
+log_error() { log_msg "ERROR" "$@"; }
+log_ok()    { log_msg "OK"    "$@"; }
+
+# Audit counters
+SKIPPED_INVALID_MD5=0
+SKIPPED_CSV_NO_MATCH=0
+
